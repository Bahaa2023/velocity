{% extends 'base.html.twig' %}

{% block title %}
  Contact
{% endblock %}

{% block body %}
  {% for message in app.flashes('contact_success') %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <strong>FÃ©licitation</strong> {{ message }}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  {% endfor %}

  <main style="background-color: #FFFFFF;">
    <div class="container py-5">
      <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
          <h1 class="text-center mb-4">Contactez-nous</h1>
          {{ form_start(form) }}
          <div class="mb-3">
            {{ form_row(form.sujet, {'label': 'Votre sujet'}) }}
          </div>
          <div class="mb-3">
            {{ form_row(form.email, {'label': 'Votre email'}) }}
          </div>
          <div class="mb-3">
            {{ form_row(form.message, {'label': 'Comment pouvons-nous vous aider ? :'}) }}
          </div>
          <div class="mb-3">
           {# {{ form_row(form.captcha,{'label':'Veuillez saisir le code CAPTCHA : ' , 'width':200, 'height':50}) }}
          </div> #}
          <input type="submit" class="btn btn-primary d-block mx-auto rounded-pill btn-lg" value="Envoyer">
          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </main>
{% endblock %} 
