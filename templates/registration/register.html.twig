{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<div class="container  py-5">
 <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
    <h1  class="text-center mb-4">Créer un compte sur vélocity.fr</h1>
 
     {{ form_start(registrationForm) }}
    {{ form_row(registrationForm.prenom, {label:'Prénom', attr: {placeholder:'Votre Prénom'}}) }}
    {{ form_row(registrationForm.nom, {attr: {placeholder:'Votre Nom'}}) }}
        {{ form_row(registrationForm.email, {attr: {placeholder:'Votre Email'}}) }} 
          {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe', attr: {placeholder:'Votre Mot de passe'}
        }) }}    
         {# {{ form_row(registrationForm.plainpassword.first) }}  #}
        {# {{ form_row(registrationForm.plainpassword.second) }}   #}
      <button type="submit" class="btn btn-primary d-block mx-auto rounded-pill">Créer mon compte</button>
     {{ form_end(registrationForm) }} 
</div>
</div>
</div>
   
{% endblock %}




   

 